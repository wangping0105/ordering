<div class="whidth_100">
  <h3 style="color:red">吐槽区</h3>
  <div>
    <div id="talk_content" class="talk_content"></div>
    <div>
        <%=form_for Order.new, url: talk_orders_path , data:{remote: true} do%>
          <div class="whidth_50 talk_content_input">
            <input type="text" name="content" id="talk_detail_content" class="whidth_100" placeholder="输入文字" />
          </div>
          <div class="talk_content_input">
            <input type="submit" class="btn-primary btn" onclick="send_btn(this)" value="发送" />
            <input type="button" class="btn-primary btn" onclick="show_each_1s('<%= show_talk_contents_orders_path %>')" value="刷新吐槽区" />
          </div>
        <%end %>
    </div>
  </div>
</div>
<script>
  $(function(){
    show_each_1s('<%= show_talk_contents_orders_path %>');
  })

</script>